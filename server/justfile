# List all available commands
default:
    @just --list

# Run the server
run:
    ./gradlew run

# Build the server
build:
    ./gradlew build

# Clean build files
clean:
    ./gradlew clean

# Run tests
test:
    ./gradlew test

# Create a distribution
dist:
    ./gradlew distZip

# Run the server in development mode with auto-reload
dev:
    ./gradlew run --continuous 
